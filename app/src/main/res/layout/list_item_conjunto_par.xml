<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:id="@+id/list_item_impar"
    >

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/conjunto_card_margin_v"
        android:layout_marginBottom="@dimen/conjunto_card_margin_v"
        android:layout_marginLeft="@dimen/conjunto_card_margin_h"
        android:layout_marginRight="@dimen/conjunto_card_margin_h"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="4dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/card_padding"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="@dimen/conjunto_list_foto_size"
                android:layout_height="@dimen/conjunto_list_foto_size"

                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:id="@+id/conjunto_list_image1" />

            <ImageView
                android:layout_width="@dimen/conjunto_list_foto_size"
                android:layout_height="@dimen/conjunto_list_foto_size"

                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:id="@+id/conjunto_list_image2" />

            <ImageView
                android:layout_width="@dimen/conjunto_list_foto_size"
                android:layout_height="@dimen/conjunto_list_foto_size"

                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:id="@+id/conjunto_list_image3" />

            <ImageView
                android:layout_width="@dimen/conjunto_list_foto_size"
                android:layout_height="@dimen/conjunto_list_foto_size"

                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:id="@+id/conjunto_list_image4" />


        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>